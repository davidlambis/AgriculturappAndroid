<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"

    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <View
        android:id="@+id/indicator_element_sincronize_status"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:shrinkColumns="*"
                android:stretchColumns="*">


                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtNombreCultivo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cultivo 1"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/text_size_18"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtDetalleTipoProducto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtNombreCultivo"
                            android:text="Aguacate Hass"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/text_size_18"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtDescripcionCultivo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtDetalleTipoProducto"
                            android:text="descripcion cultivo "
                            android:textColor="@color/purple"
                            android:textSize="@dimen/text_size_12"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/txtCosechaEstimada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtDescripcionCultivo"
                            android:text="cosecha estimada"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/text_size_12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtFechaInicio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtCosechaEstimada"
                            android:text="03/20/2018"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/text_size_12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtFechaFin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtFechaInicio"
                            android:text="03/21/2018"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/text_size_12"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/btn_edit_cultivo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/margin_3"
                                android:src="@android:drawable/ic_menu_edit"
                                android:tint="@color/light_green_800"
                                tools:ignore="ContentDescription" />

                            <ImageButton
                                android:id="@+id/btn_delete_cultivo"
                                style="@style/Base.Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:tint="@color/red_900"
                                app:srcCompat="@android:drawable/ic_menu_delete" />

                        </LinearLayout>
                    </RelativeLayout>
                </TableRow>

            </TableLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>