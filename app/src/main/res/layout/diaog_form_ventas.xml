<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_general"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivClosetDialogControlPlaga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_button"
            android:tint="@color/grey_luiyi" />
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:text="@string/title_add_venta"
            android:textColor="@color/purple"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />
        <!--<ImageView
            android:id="@+id/logo"
            android:layout_marginBottom="-15dp"
            android:layout_below="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:layout_gravity="center"
            android:src="@drawable/ic_cultivos" />-->

        <EditText
            android:layout_marginTop="@dimen/margin_5"
            android:id="@+id/searchFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtTitle"
            android:background="@drawable/radius_edit_text"
            android:drawableStart="@drawable/ic_lupa_buscar_producto"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:foreground="?android:attr/selectableItemBackground"
            android:hint="@string/search_cultivo"
            android:padding="@dimen/margin_3"
            android:paddingStart="@dimen/margin_5" />


        <View
            android:id="@+id/division"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/searchFilter"
            android:layout_marginTop="15dp"
            android:background="@color/purple" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="@dimen/margin_5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_3"
                    android:layout_weight="1"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <EditText
                        android:id="@+id/edtNombreCultivo"
                        style="@style/editText"
                        android:textSize="@dimen/text_size_16"
                        android:background="@color/green_100"
                        android:hint="@string/cantidad"
                        android:inputType="number" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_3"
                    android:layout_weight="1"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <EditText
                        android:id="@+id/txtPrecioVenta"
                        style="@style/editText"
                        android:textSize="@dimen/text_size_16"
                        android:background="@color/green_100"
                        android:hint="@string/venta"
                        android:inputType="numberDecimal" />
                </android.support.design.widget.TextInputLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/txtTitleSubtotal"
                        android:paddingStart="@dimen/margin_5"
                        android:text="@string/subtotal"
                        android:textSize="@dimen/text_size_16" />
                    <TextView
                        android:id="@+id/txtValorSubtotal"
                        android:layout_below="@+id/txtTitleSubtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingStart="@dimen/margin_5"
                        android:text="12000"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold" />
                </RelativeLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnAction1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/text_size_12"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/margin_10"
                    android:src="@drawable/ic_info"/>

                <ImageButton
                    android:id="@+id/btnAction5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/margin_10"
                    android:src="@drawable/ic_local_offer" />


                <ImageButton
                    android:id="@+id/btnAction3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?android:selectableItemBackground"
                    android:clickable="true"
                    android:padding="@dimen/margin_10"
                    android:src="@drawable/ic_delete" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_70"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                <EditText
                    style="@style/editText"
                    android:background="@color/green_100"
                    android:hint="@string/total"
                    android:textSize="@dimen/margin_24"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_70"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                <EditText
                    style="@style/editText"
                    android:background="@color/green_100"
                    android:hint="@string/name_cliente"
                    android:inputType="text"
                    android:textSize="@dimen/text_size_16"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_70"
                app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                <EditText
                    style="@style/editText"
                    android:layout_height="150dp"
                    android:background="@color/green_100"
                    android:hint="@string/concepto"
                    android:inputType="text|textMultiLine"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/margin_24"
                android:paddingTop="@dimen/margin_3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_70">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fabAddLote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:backgroundTint="@color/red_900"
                        app:fabCustomSize="@dimen/size_40"
                        android:tint="@color/white"
                        android:src="@drawable/ic_close_white" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fabLocationLote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_done_white"
                        android:tint="@color/white"
                        app:backgroundTint="@color/colorPrimaryDark"
                        app:fabCustomSize="@dimen/size_40"

                        app:layout_anchorGravity="right" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>