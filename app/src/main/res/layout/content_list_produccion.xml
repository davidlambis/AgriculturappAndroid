<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_3"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="5dp">

    <!-- Les CardView possèdent des attributs supplémentaires dont
         - cardBackgroundColor
         - cardElevation pour l'élévation (donc aussi l'ombre)
         - cardCornerRadius pour arrondir les angles
     -->

        <!-- Les CardView agissent comme des FrameLayout,
         pour avoir une organisation verticale nous devons
         donc rajouter un LinearLayout -->
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_cant_produccion" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="@dimen/text_size_25"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTitle"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tittle_date_produccion"/>
            <TextView
                android:layout_below="@+id/txtFechaInicioProduccion"
                android:id="@+id/txtFechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView
                android:layout_below="@+id/txtFechaFinProducccion"
                android:id="@+id/txtFechaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_size_25"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtCantidadProduccion"
                android:textSize="@dimen/text_size_18"
                android:gravity="start"
                android:textColor="@color/grey_luiyi"
                android:textStyle="bold"
                android:layout_width="@dimen/width"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="?android:selectableItemBackground"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:clickable="true"
            android:id="@+id/btnEditProducccion"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_width="wrap_content"
            android:tint="@color/grey_luiyi"
            android:layout_marginEnd="@dimen/text_size_12"
            android:layout_height="wrap_content"
            />
        <ImageButton
            android:clickable="true"
            android:id="@+id/btnDeleteProduccion"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_width="wrap_content"
            android:tint="@color/grey_luiyi"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>