<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:backgroundTint="@color/white"
android:clickable="true"

android:foreground="?android:attr/selectableItemBackground"
app:cardUseCompatPadding="true">

<View
    android:id="@+id/indicator_element_sincronize_status"
    android:layout_width="10dp"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@color/colorPrimary" />

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/sombra"
            android:shrinkColumns="*"
            android:stretchColumns="*">
            <!-- Row 1 with single column
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Row 1"
                android:layout_span="3"
                android:padding="18dip"
                android:background="#b0b0b0"
                android:textColor="#000"/>
        </TableRow> -->
            <!-- Row 1 with 3 columns -->

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_3">

                    <TextView
                        android:id="@+id/txtNombreUnidadProductiva"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unidad Producitva"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtDescripcinUnidadProductiva"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="descripcion up "
                        android:textColor="@color/purple"
                        android:textSize="@dimen/text_size_12"
                        android:layout_below="@+id/txtNombreUnidadProductiva"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txtCiudadDepartament"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Neiva-Huila"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/text_size_12"
                        android:layout_below="@+id/txtDescripcinUnidadProductiva"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3232.34 mts"
                        android:layout_below="@+id/txtCiudadDepartament"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/text_size_12"
                        android:textStyle="bold" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:background="@drawable/sombra"
                        android:id="@+id/relative_layout"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="70dp">
                        <ImageView
                            android:id="@+id/button1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableTint="@color/red_900"
                            android:src="@drawable/ic_geolocalizacion_btn" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/badge_notification_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/relative_layout"
                        android:text=""
                        android:textColor="#FFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:background="@drawable/sombra"
                        android:layout_below="@+id/relative_layout"
                        android:id="@+id/relative_layout1"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="70dp">
                        <ImageView
                            android:id="@+id/myButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTint="@color/red_900"
                            android:src="@drawable/ic_geolocalizacion_poligon_btn" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/badge_notification_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relative_layout"
                        android:layout_alignRight="@id/relative_layout1"
                        android:background="@drawable/item_priority_high"
                        android:text=""
                        android:textColor="#FFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                            <ImageView
                                android:padding="@dimen/margin_3"
                                android:background="@color/light_green_800"
                                android:layout_weight="1"
                                android:id="@+id/ttt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableTint="@color/red_900"
                                android:src="@drawable/ic_done_white" />

                            <ImageView
                                android:padding="@dimen/margin_3"
                                android:background="@color/red_900"
                                android:layout_weight="1"
                                android:id="@+id/ttts"
                                android:src="@drawable/ic_close_white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grey_luiyi" />
                </RelativeLayout>
            </TableRow>
        </TableLayout>


    </LinearLayout>

    <!-- <View

         android:layout_width="match_parent"
         android:layout_height="3dp"
         android:layout_marginTop="5dp"
         android:background="@color/colorPrimary" />-->
</LinearLayout>
</android.support.v7.widget.CardView>