<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivClosetDialogDescripcionControlPlaga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_button"
            />

        <TextView
            android:id="@+id/titlePlaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/margin_global"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/purple"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logoPlaga"
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_below="@+id/titlePlaga"
            android:layout_marginRight="@dimen/margin_3"
            android:layout_height="150dp"
            android:src="@drawable/default_avata" />

        <View
            android:id="@+id/division"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/logoPlaga"
            android:layout_marginTop="15dp"
            android:background="@color/purple" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_24">

            <TextView
                android:textSize="@dimen/text_size_18"
                android:id="@+id/txtDescripcionPlaga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:gravity="start"
                android:text="Unidad Productiva" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>