        android:background="@color/colorPrimary" />-->

    <LinearLayout
        android:layout_margin="@dimen/margin_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name_lote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Lote"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/grey_luiyi" />

            <TextView
                android:id="@+id/txt_description_lote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_codigo_apoyo"
                android:text="descripcion lote"
                android:textSize="20dp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAreaLote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area lote"
                    android:textColor="@color/grey_luiyi"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtFechaLote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_codigo_apoyo"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:text="Fecha Creacion"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--<TextView
                android:id="@+id/txtCoordenada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_codigo_apoyo"
                android:text="12312312-31231231"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_12"
                android:textStyle="bold" />-->

            <LinearLayout
                android:layout_gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnDeleteLote"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tt"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:tint="@color/grey_luiyi"
                    app:srcCompat="@android:drawable/ic_menu_delete" />

                <ImageButton
                    android:layout_weight="1"
                    android:id="@+id/btnEditLote"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="12sp"
                    android:tint="@color/grey_luiyi"
                    app:srcCompat="@android:drawable/ic_menu_edit" />


            </LinearLayout>


        </LinearLayout>

       <!-- <View

            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary" />-->
    </LinearLayout>
</android.support.v7.widget.CardView>