<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <RelativeLayout
        android:layout_marginStart="@dimen/margin_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/ivClosetDialogGeneral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/white_solid"
            android:src="@drawable/ic_back_button"/>
        <TextView

            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white_solid"
            android:textSize="@dimen/text_size_18"
            android:gravity="center"
            android:textStyle="bold" />
        <ImageView
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="-15dp"
            android:layout_below="@+id/title"
            android:id="@+id/logo"
            android:tint="@color/white_solid"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:layout_gravity="center"
            android:src="@drawable/ic_lote" />
        <View
            android:id="@+id/division"
            android:layout_below="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/white_solid" />
    </RelativeLayout>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_3"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/reciclerview_dialog"/>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
