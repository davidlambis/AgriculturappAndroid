<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_3"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_3">
        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/imgTipoProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/platanosverdes" />

        <TextView
            android:id="@+id/txtNombreTipoProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgTipoProducto"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:text="Producto"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:id="@+id/btnSelectedTipoProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNombreTipoProducto"
            android:layout_gravity="center"
            android:background="?android:selectableItemBackground"
            android:drawableEnd="@drawable/ic_hand_selected"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="@dimen/text_size_12"
            android:text="@string/selected"
            android:textColor="@color/purple" />
    </RelativeLayout>
</android.support.v7.widget.CardView>