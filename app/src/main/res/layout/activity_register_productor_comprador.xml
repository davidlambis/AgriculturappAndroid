                        <EditText
                            android:id="@+id/edtNombreFinca"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_nombre_finca"
                            android:drawablePadding="16dp"
