        android:background="@drawable/fondo_nav_drawer2"
        app:elevation="@dimen/margin_30"
        app:headerLayout="@layout/navigation_drawer_header"
        app:itemBackground="@color/black_alpha_40"
        app:itemIconTint="@color/white_solid"
