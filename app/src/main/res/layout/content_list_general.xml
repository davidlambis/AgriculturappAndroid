<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_3"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    >

<LinearLayout
        android:padding="@dimen/margin_3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/contentIcon"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <LinearLayout
                android:paddingStart="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtTitle"
                    android:textSize="@dimen/text_size_18"
                    android:gravity="start"
                    android:textColor="@color/grey_luiyi"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:background="@color/grey_luiyi" />
                <TextView
                    android:id="@+id/txtDescription"
                    android:textSize="@dimen/text_size_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <LinearLayout
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtQuantity"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_size_16"
                        android:layout_height="wrap_content"
                        android:text=""/>

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/text_size_16"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtDescripcionAdditional"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_size_25"
                    android:text=""/>

            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageButton
                android:padding="@dimen/margin_10"
                android:background="?android:selectableItemBackground"
                android:layout_weight="1"
                android:clickable="true"
                android:id="@+id/btnAction1"
                android:src="@android:drawable/ic_menu_add"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/text_size_12"
                android:layout_height="wrap_content"
                />
            <ImageButton
                android:padding="@dimen/margin_10"
                android:layout_weight="1"
                android:clickable="true"
                android:id="@+id/btnAction2"
                android:background="?android:selectableItemBackground"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageButton
                android:padding="@dimen/margin_10"
                android:layout_weight="1"
                android:clickable="true"
                android:id="@+id/btnAction3"
                android:background="?android:selectableItemBackground"
                android:src="@android:drawable/ic_menu_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>