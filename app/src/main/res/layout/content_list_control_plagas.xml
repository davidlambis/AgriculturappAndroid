<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_3"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/cardControlPlaga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivControlPlaga"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_plagas"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_size_25"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNombrePlaga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="RoÃ±a"
                    android:textColor="@color/grey_luiyi"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/grey_luiyi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_fecha_aplicacion"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtFechaAplicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02/04/2018"
                    android:textColor="@color/grey_luiyi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_insumo"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtInsumo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kocide"
                    android:textColor="@color/grey_luiyi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_dosis"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDosis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50mg/L"
                    android:textColor="@color/grey_luiyi" />

                <TextView
                    android:id="@+id/titleFechaErradicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_fecha_erradicacion"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtFechaErradicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_luiyi"
                    android:visibility="gone" />

                <TextView
                    android:textAlignment="textEnd"
                    android:id="@+id/txtSincronizacion"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold"
                    android:paddingEnd="@dimen/margin_5"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_global"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnDeleteControlPlaga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:src="@android:drawable/ic_menu_delete"
                android:tint="@color/grey_luiyi" />

            <!--

             <ImageButton
                                android:id="@+id/btn_delete_cultivo"
                                style="@style/Base.Widget.AppCompat.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/margin_3"
                                android:tint="@color/grey_luiyi"
                                app:srcCompat="@android:drawable/ic_menu_delete" />

            -->

            <TextView
                android:id="@+id/txtEstadoErradicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_65"
                android:textAlignment="center"
                android:textColor="@color/grey_luiyi"
                android:textSize="@dimen/text_size_25"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnErradicar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_global"
                android:background="@drawable/custom_drawable_card_view_red"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/btn_erradicar"
                android:textColor="@color/grey_luiyi"
                android:textSize="@dimen/text_size"
                android:visibility="gone" />
            <!--
            <Button
                android:id="@+id/btnErradicarPlaga"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginStart="@dimen/margin_global"
                android:text="Erradicar"/> -->

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>